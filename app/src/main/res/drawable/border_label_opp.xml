<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/dark_blue" />
        </shape>
    </item>
    <item android:bottom="4dp"  android:top="4dp" >
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:centerX="9%"
                android:startColor="#FFB3B3B3"
                android:centerColor="#FFACACAC"
                android:endColor="#FF696969"
                android:angle="180"/>
            <padding
                android:bottom="2dp"
                android:left="2dp"
                android:right="2dp"
                android:top="2dp" />
        </shape>
    </item>
</layer-list>