<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/black" />
        </shape>
    </item>
    <item
        android:bottom="1dp"
        android:top="1dp"
        android:left="1dp"
        android:right="1dp">
        <shape android:shape="rectangle">
            <gradient
                android:type="radial"
                android:gradientRadius="400"
                android:startColor="#FFffffff"
                android:centerColor="#FFffffff"
                android:endColor="#FF808080"
                android:angle="45"/>
        </shape>
    </item>
    <item
        android:bottom="1dp"
        android:top="1dp"
        android:left="1dp"
        android:right="1dp">
        <shape android:shape="rectangle">
            <gradient
                android:type="radial"
                android:gradientRadius="400"
                android:startColor="#FFffffff"
                android:centerColor="#FFffffff"
                android:endColor="#FF808080"
                android:angle="45"/>
        </shape>
    </item>
</layer-list>